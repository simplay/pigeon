source "http://rubygems.org"

group :development do
  # A runtime developer console used for debugging
  gem 'pry'

  # Binding navigation commands for Pry to make a simple debugger 
  gem 'pry-nav'

  # Pretty prints Ruby objects in color exposing their internal structure with proper indentationgem 'awesome_print'
  gem 'awesome_print'
end

group :test do
  # A testing suite faciliting TDD, BDD, mocking, and benchmarking.
  gem 'minitest'
end

# Easy command-line application without a lot of syntax
gem 'gli'

# Packaging and deployment for standalone JRuby apps
gem 'rawr', :source => "http://gems.neurogami.com"

gem 'telegram-bot-ruby'
